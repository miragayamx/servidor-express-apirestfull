<h1 class="display-4 mb-3">Lista de productos</h1>
{{#if existe}}
<table class="table table-responsive table-dark table-striped" id='tabla'>
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Imagen</th>
        </tr>
    </thead>
    <tbody>
        {{#each lista}}
        <tr>
            <td>{{this.title}}</td>
            <td>${{this.price}}</td>
            <td><img height="80" src={{this.thumbnail}} alt="#"></td>
            <td>
                <button type="button" class="btn btn-primary"
                    onclick="removerItem('{{this._id}}')">Remover</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<div class="alert alert-info" role="alert">
    No se encontraron productos
</div>
{{/if}}
<script>
    async function removerItem(id) {
        await fetch(`/api/productos/borrar/${id}`, {
            method: 'DELETE',
        }).then(res => location.href = '/home')
    }
</script>